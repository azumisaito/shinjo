.admin-page
  .admin_detail
    .rst-info
      %h2.rst-info__header 詳細情報
      %h3.rst-info__name
        = @restaurant.name
      .content
        .content__l
          = image_tag @restaurant.image , class: "content__image", alt: "レストランの写真"
        .content__r
          %ul.budget
            %li.icon-day= @restaurant.budget_d_i18n
            %li.icon-night= @restaurant.budget_n_i18n

          %h3.detail__content__header
            = @restaurant.header
          %p.detail__content__description
            = @restaurant.description
      .rst-info__bottom
        %button= link_to 'このレストランの情報を編集する', edit_admin_restaurant_path(@restaurant)
