.admin-page
  .admin-edit
    .rst-info
      %h3.rst-info__header レストラン情報編集
      .single-content
        .form
          = form_with model: @restaurant, url:admin_restaurants_path(@restaurant), local: true do |f|
            - if @restaurant.errors.any?
              %h3 入力した内容にエラーがあります
              -# %ul
              -#   - @restaurant.errors.full_messgae.each do |message|
              -#     %li= message

            %p= f.label :name, "レストラン名", class: "form-label"
            %p= f.text_field :name, placeholder: "レストラン名", required: true, class: "input-box"

            %p= f.label :budget_d, "予算（昼）", class: "form-label"
            %p= f.select :budget_d, Restaurant.budget_ds_i18n.keys.map{|k| [I18n.t("enums.restaurant.budget_d.#{k}"), k]}, {}, {class: "select-box"}

            %p= f.label :budget_n, "予算（夜）", class: "form-label"
            %p= f.select :budget_n, Restaurant.budget_ns_i18n.keys.map{|k| [I18n.t("enums.restaurant.budget_d.#{k}"), k]}, {}, {class: "select-box"}

            %p= f.label :header, "説明文の見出し", class: "form-label"
            %p= f.text_field :header, placeholder: "説明文の見出し(100文字まで)", required: true, class: "input-box"

            %p= f.label :description, "レストラン説明", class: "form-label"
            %p= f.text_area :description, placeholder: "レストランの説明(2000文字まで)", required: true, class: "input-area"

            %p= f.label :image, "レストランの画像", class: "form-label"
            %p= f.text_field :image, class: "input-box"
            .button
              %button= f.submit "編集する", class: "green-btn"
              %button= link_to "レストラン一覧へ戻る", admin_restaurants_path, class: "white-btn"
